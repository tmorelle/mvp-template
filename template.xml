<template format="4"
        revision="1"
        name="MVP Dagger"
        description="Creates a new MVP classes - Presenter, View and Dagger Module.">

    <category value="Other"/>

    <parameter
        id="kindOfElement"
        name="Element"
        type="enum"
        default="Activity"
        help="Which type of element you want to build :)" >
        <option id="Activity">Activity</option>
        <option id="Fragment">Fragment</option>
        <option id="ChildFragment">ChildFragment</option>
    </parameter>

    <parameter 
        id="featureName"
        name="Feature Name"
        type="string"
        constraints="class|unique|nonempty"
        help="The name of the feature" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
</template>